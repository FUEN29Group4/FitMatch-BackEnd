<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<script>
    //放置標題
    document.addEventListener('DOMContentLoaded', function () {
        var textElement = document.getElementById('TitleName');
        textElement.innerHTML = '機器人訊息管理';
    });
// 清空功能
    $(document).ready(function () {
        $('#clearSearch').click(function () {
            window.location.href = '@Url.Action("Robot", "Robot")';
        });
    });


    //刪除確認功能
    function showDeleteConfirmation(id) {
        Swal.fire({
            title: '確定要刪除這筆資料嗎？',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#2BC17B',
            cancelButtonColor: '##dc3545',
            confirmButtonText: '確定',
            cancelButtonText: '取消'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/Employee/Delete/' + id;
            }
        });

        return false;
    }
    // 刪除成功
    const urlParams = new URLSearchParams(window.location.search);
    const deletedId = urlParams.get('deletedId');
    if (deletedId) {
        Swal.fire({
            title: '刪除成功',
            text: '已成功刪除一筆員工資料。',
            icon: 'success',
            confirmButtonColor: '#3085d6',
            confirmButtonText: '確定'
        });
    }
</script>