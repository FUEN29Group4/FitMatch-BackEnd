                                    }
                                    else
                                    {
                                        @item.DefaultQuestion
                                    }
                                </td>

                                <td>
                                    @* 判斷&顯示回答 *@

                                    @if (item.DefaultResponse != null && item.DefaultResponse.Length >= 20)
                                    {
