                            </div>
                        </div>


                        @* 將資料庫的類型帶到這個資料中顯示的function *@
                        @functions {
                            bool IsTypeSelected(string type)
                            {
                                return type == Model.Type;
                            }
                        }



                        @* ------radio end------ *@




