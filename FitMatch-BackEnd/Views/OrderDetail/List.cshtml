                <div class="rounded-top p-4">
                    <div class="Oredercontainer">
                        <div class="d-flex align-items-end justify-content-center">
                            @{
                                foreach (var item in Model)
                                {
                                    <ul class="Orderaddress"
                                        style="list-style-type: none; padding-left: 0; text-align: left;margin-top: -10px;margin-left: -1210px;">

