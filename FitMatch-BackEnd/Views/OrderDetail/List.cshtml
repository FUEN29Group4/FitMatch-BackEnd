                                <tr class="data-row">
                                    @*  <td><input class="form-check-input" type="checkbox"></td>*@


                                    <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TypeID)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Photo)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    @*<td>
                            <a class="btn btn-sm btn-secondary" href="@Url.Action(" List", "OrderDetail" , new { id=item.OrderId })"
                            style="background-color: aliceblue; color: black;">
