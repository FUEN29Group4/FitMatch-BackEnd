    <div class="container-fluid pt-4 px-4">
        <nav class="navbar navbar-expand-lg bg-white rounded">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="d-flex align-items-center">

                    <!-- 將所有的選項和搜索功能都放在同一個form中 -->
                    <form method="post" asp-action="List" class="container-fluid d-flex flex-wrap justify-content-between align-items-center">

                        <!--選擇產品類別-->
                        <div class="d-flex align-items-center me-3">
                            <label for="productType" class="me-2">商品類別:</label>
                            <select id="productType" name="ProductFilter" class="form-select" style="background-color: #fff;" aria-label="商品類別">
                                <option value="" selected disabled hidden>請選擇商品類別</option>
                                <option value="雞胸肉">雞胸肉</option>
                                <option value="保健品">保健品</option>
                                <option value="乳清蛋白">乳清蛋白</option>
                            </select>
                        </div>
                        <!--上架狀態-->
                        <div class="d-flex align-items-center me-3">
                            <label for="statusType" class="me-2">上架狀態:</label>
                            <select id="statusType" name="StatusFilter" class="form-select" style="background-color: #fff;" aria-label="上架狀態">
                                <option value="" selected disabled hidden>請選擇狀態</option>
                                <option value="上架">上架</option>
                                <option value="下架">下架</option>
                            </select>
                        </div>
                        <!--輸入關鍵字-->
                        <div class="d-flex align-items-center ml-auto">
                            <div class="me-2">
                                <input name="txtKeyword" class="form-control" type="text" placeholder="請輸入關鍵字" aria-label="請輸入關鍵字" id="searchInput">
                            </div>
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fa-solid fa-magnifying-glass fa-xl"></i>
                            </button>
                            <button type="reset" class="btn btn-outline-success">清空</button>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
    </div>

    <!-- 篩選列結束 -->
    <!-- 管理列表開始 -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-white text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h5 class="mb-0 text-dark">商品列表</h5>
                <a class="btn btn-primary  custom-purple" asp-action="Create">新增商品</a>
            </div>
            <div class="table-responsive">
                <table class="table text-center align-middle table-bordered table-hover mb-0">
                    <thead style="background-color: #74ffba;">

                        <tr class="text-dark">
                            <th scope="col" style="min-width: 80px;">@Html.DisplayNameFor(model => model.ProductId)</th>
                            <th scope="col" style="min-width: 80px;">@Html.DisplayNameFor(model => model.TypeId)</th>
                            <th scope="col" style="min-width: 80px;">@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th scope="col" style="min-width: 80px;">@Html.DisplayNameFor(model => model.Photo)</th>
                            <th scope="col" style="min-width: 80px;">@Html.DisplayNameFor(model => model.ProductDescription)</th>
                            <th scope="col" style="min-width: 80px;">@Html.DisplayNameFor(model => model.Price)</th>
                            <th scope="col" style="min-width: 80px;">@Html.DisplayNameFor(model => model.ProductInventory)</th>
                            <th scope="col" style="min-width: 80px;">@Html.DisplayNameFor(model => model.Status)</th>
                            <th scope="col" style="min-width: 80px;">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                            foreach (var item in Model)
                            {

                                count++;

                                <tr class="data-row">
                                    <td>@Html.DisplayFor(modelItem => item.ProductId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TypeId)</td>

                                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                                    <td><img src="@("/img/商城/" + item.Photo)" width="110" height="70" /></td>
                                    <td class="box">@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ProductInventory)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Approved)</td>

                                    <td>
                                        <a class="btn btn-sm btn-secondary" href="@Url.Action("Edit", "Product", new { id = item.ProductId })"
                                           style="background-color: aliceblue; color: black;">
                                            <i class="fa-regular fa-pen-to-square">編輯</i>
                                        </a>
                                        <a class="btn btn-sm btn-primary" href="@Url.Action("Delete", "Product", new { id = item.ProductId })">
                                            <i class="fa-solid fa-trash-can">刪除</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between pt-4" style="margin-left: 3px;margin-top: 10px;">

                <!-- 換頁區塊開始 -->
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link previous-page" data-page-type="previous" href="@Url.Action("List", new { currentPage = ViewBag.CurrentPage - 1 })">
                                <i class="fa-solid fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" id="@("page-" + i)" data-page="@i" data-page-type="number" href="@Url.Action("List", new { currentPage = i })">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link next-page" data-page-type="next" href="@Url.Action("List", new { currentPage = ViewBag.CurrentPage + 1 })">
                                <i class="fa-solid fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- 換頁區塊END -->
            </div>
            <!-- 最下面END -->
        </div>

    </div>
