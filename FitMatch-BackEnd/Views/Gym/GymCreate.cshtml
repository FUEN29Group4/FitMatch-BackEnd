<script>
    const uploadInput = document.getElementById('FileToUpload');
    const preview = document.getElementById('preview');
    const icon = document.querySelector('.icon');

    uploadInput.addEventListener('change', function () {
        const file = this.files[0];
        if (file) {
            const reader = new FileReader();

            reader.addEventListener('load', function () {
                preview.src = this.result;
                preview.style.display = 'block';
                icon.style.display = 'none';
            });

            reader.readAsDataURL(file);
        }
    });


    $(document).ready(function () {
        var isFormSubmitted = '@ViewData["FormSubmitted"]'; 

        if (isFormSubmitted !== "True") return; // 如果表單還沒提交，則終止這段腳本

        var approvedStatus = '@Model.Approved'; // Get the 'Approved' value from the Gym model passed to the view

        var statusMessage = ""; // The message you want to display based on the 'Approved' value

        if (approvedStatus === "True") {
            statusMessage = "上架";
        } else if (approvedStatus === "False") {
            statusMessage = "下架";
        } else if (approvedStatus === "") {
            statusMessage = "待審核";
        }

        if (statusMessage) {
            // Set the status in the notification
            $('#currentStatus').text(statusMessage);

            // Display the notification
            $('#notification').fadeIn();

            // Hide the notification after 5 seconds
            setTimeout(function () {
                $('#notification').fadeOut();
            }, 5000);
        }
    });



</script>


@*生成時間選項的簡單示例函數*@
@functions {
    public List<SelectListItem> GetTimeOptions(int startHour, int endHour)
    {
        var timeOptions = new List<SelectListItem>();

        for (int hour = startHour; hour <= endHour; hour++)
        {
            timeOptions.Add(new SelectListItem { Value = hour.ToString(), Text = $"{hour:00}:00" });
        }

        return timeOptions;
    }
}
