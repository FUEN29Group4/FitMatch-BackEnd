                                <option value="台北">台北</option>
                                <option value="台中">台中</option>
                                <option value="台南">台南</option>
                            </select>
                        </div>

                        <!-- 上架狀態選擇 -->
                        <div class="d-flex align-items-center me-3">
                            <label for="statusType" class="me-2">上架狀態:</label>
                            <select id="statusType" name="StatusFilter" class="form-select" style="background-color: #fff;" aria-label="上架狀態">
                                <option value="" selected disabled hidden>請選擇狀態</option>
                                <option value="上架">上架</option>
                                <option value="下架">下架</option>
                                <option value="待審核">待審核</option>
                            </select>
                        </div>

                        <!-- 搜尋部分 -->
                        <div class="d-flex align-items-center ml-auto">
                            <div class="me-2">
                                <input name="txtKeyword" class="form-control" type="text" placeholder="請輸入關鍵字" aria-label="請輸入關鍵字" id="searchInput">
                            </div>
                            <button type="submit" class="btn p-0 ps-2">
                                <i class="fa-solid fa-magnifying-glass fa-xl"></i>
                            </button>

                            <button type="reset" class="btn btn-outline-success" style="margin-left:15px">清空</button>
                        </div>

                    </form>
                </div>
            </div>
        </nav>
    </div>



    <!-- 篩選列結束 -->
    <!-- 管理列表開始 -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-white text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h5 class="mb-0 text-dark">場館列表</h5>
                <a class="btn btn-primary  custom-purple" asp-action="GymCreate">新增場館</a>
            </div>
            <div class="table-responsive">
                <table class="table text-center align-middle table-bordered table-hover mb-0">
                    <thead style="background-color: #74ffba;">
                        <tr class="text-dark">
                            <th scope="col">場館編號</th>
                            <th scope="col">場館名稱</th>
                            <th scope="col">審核狀態</th>
                            <th scope="col">地址</th>
                            <th scope="col">營業時間</th>
                            <th scope="col">結束時間</th>
                            <th scope="col">封面</th>
                            <th scope="col">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                            foreach (var item in Model)
                            {
                                count++;

                                <tr class="data-row">
                                    <td>@Html.DisplayFor(modelItem => item.GymId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.GymName)</td>
                                    <td>@(item.Approved == true ? "上架" : (item.Approved == false ? "下架" : "待審核"))</td>
                                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                    <td>@(item.OpentimeStart.HasValue ? item.OpentimeStart.Value.ToString("HH:mm") : "未設定")</td>
                                    <td>@(item.OpentimeEnd.HasValue ? item.OpentimeEnd.Value.ToString("HH:mm") : "未設定")</td>
                                    <td><img src="@("/img/gym/" + item.Photo)" width="110" height="70" /></td>
                                    <td>
                                        <a class="btn btn-sm btn-secondary" href="@Url.Action("GymEdit", "Gym", new { id = item.GymId })"
                                           style="background-color: aliceblue; color: black;">
                                            <i class="fa-regular fa-pen-to-square">編輯</i>
                                        </a>
                                        <a class="btn btn-sm btn-primary" href="@Url.Action("GymDelete", "Gym", new { id = item.GymId })">
                                            <i class="fa-solid fa-trash-can">刪除</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                </table>
            </div>


                <!-- 換頁區塊開始 -->
            <nav aria-label="Page navigation example" style="margin-left: 1435px; margin-top: 30px;">
                    <ul class="pagination">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link previous-page" data-page-type="previous" href="@Url.Action("Gym", new { currentPage = ViewBag.CurrentPage - 1 })">
                                <i class="fa-solid fa-chevron-left"></i>
                            </a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" id="@("page-" + i)" data-page="@i" data-page-type="number" href="@Url.Action("Gym", new { currentPage = i })">
                                    @i
                                </a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link next-page" data-page-type="next" href="@Url.Action("Gym", new { currentPage = ViewBag.CurrentPage + 1 })">
                                <i class="fa-solid fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- 換頁區塊END -->
