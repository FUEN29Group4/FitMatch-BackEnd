                    <!-- 將所有的選項和搜索功能都放在同一個form中 -->
                    <form method="post" asp-action="Gym" class="container-fluid d-flex flex-wrap justify-content-between align-items-center">

                        <!-- 區域選擇 -->
                        <div class="d-flex align-items-center me-3">
                            <label for="regionType" class="me-2">區域:</label>
                            <select id="regionType" name="RegionFilter" class="form-select" style="background-color: #fff;" aria-label="區域">
