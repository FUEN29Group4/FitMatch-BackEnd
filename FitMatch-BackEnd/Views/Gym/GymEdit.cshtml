                                        {
                                            <option value="@i">@(i.ToString("00") + ":00")</option>
                                        }
                                    }
                                </select>
                                <select class="form-select mb-3 ms-4" aria-label="Default select example" name="OpentimeEnd">
                                    @for (int i = 0; i <= 23; i++)
                                    {
                                        if (Model.OpentimeEnd?.Hour == i)
                                        {
                                            <option value="@i" selected>@(i.ToString("00") + ":00")</option>
                                        }
