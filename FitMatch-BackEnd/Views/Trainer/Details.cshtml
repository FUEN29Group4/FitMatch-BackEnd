                        <div class="col-8">
                            <label id="inputphone" class="col-form-label" disabled>@Model.Phone</label>
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-4">
                            <label id="inputemail" class="col-form-label fw-bold">Email</label>
                        </div>
                        <div class="col-8">
                            <label id="inputemail" class="col-form-label" disabled>@Model.Email</label>
