                            </div>
                        </div>
                        <div class="row pt-3">
                            <div class="col-2">
                                <label for="inputname" class="col-form-label fw-bold">自我介紹</label>
                            </div>
                            <div class="col-8">
                                <label id="inputgym2" class="col-form-label">
                                    @Model.Introduce
