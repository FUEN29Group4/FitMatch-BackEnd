<script>
    // 清空功能
    $(document).ready(function () {
        $('#clearSearch').click(function () {
            window.location.href = '@Url.Action("Trainer", "Trainer")';
        });
    });
    //確認通過審核
    const check = () => {
        Swal.fire({
            icon: 'success',
            timer: 3000,
            title: '審核通過',
        })
    }
    //確認退回審核
    const error = () => {
        Swal.fire({
            icon: 'error',
            timer: 3000,
            title: '退回審核',
        })
    }


    //教練審核狀態
    $(document).ready(function () {
        $('select[name="approved"]').on('change', function () {
            // 直接提交表單進行篩選
            $(this).closest('form').submit();
        });

        $('select[name="city"]').on('change', function () {
            // 直接提交表單進行篩選
            $(this).closest('form').submit();
        });
    });

</script>